<p id="notice"><%= notice %></p>

<h1>Listing Histories</h1>
<%= link_to 'New History', new_history_path %>
<table>
  <thead>
    <tr>
      <th>Device</th>
      <th>Data type</th>
      <th>Data content</th>
      <th>Location code</th>
      <th>Location type</th>
      <th>Data stamp address</th>
      <th>Time Stamp</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td>
          <% if history.device %>
            <%= history.device.series_code %>
          <% else %>
            <%= nil %>
          <% end %>
        </td>
        <td><%= history.data_type %></td>
        <td><%= history.data_content %></td>
        <td><%= history.location_code %></td>
        <td><%= history.location_type %></td>
        <td><%= history.data_stamp_address %></td>
        <td><%= history.created_at.to_s %></td>
        <td><%= history.lng %></td>
        <td><%= history.lat %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>