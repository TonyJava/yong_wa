<p id="notice"><%= notice %></p>
<h1>重置手表</h1>
  <%= render 'reset' %>
<h1>Listing Devices</h1>
<%= link_to 'New Device', new_device_path %>
<table>
  <thead>
    <tr>
      <th>Device Id</th>
      <th>Device name</th>
      <th>Device state</th>
      <th>Device config</th>
      <th>Device mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id %></td>
        <td><%= device.series_code %></td>
        <td><%= device.active %></td>
        <td><%= device.config_info %></td>
        <td><%= device.mobile %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @devices %>

<br>

